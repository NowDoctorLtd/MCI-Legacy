@model List<mci_main.Data.Review>

@{
    ViewData["Title"] = "View Review";
}

<div id="mainHeader">
    <h1>Practitioner Reviews</h1>
</div>

<div class="uk-card uk-card-default uk-card-body">
    @foreach(var review in Model)
    { 
    <div class="review-item">
        <p class="review-item-title">@review.Title</p>
        <p>@review.Comment</p>
        <p>Review by: @review.ReviewerName</p>
        <p>Date of Visit: @review.DateVisited</p>
    </div>
    }
	<div class="action-section">
	    <a asp-controller="practitioner" asp-action="Index" asp-route-id="@ViewData["id"]">Back</a>
	</div>
</div>

