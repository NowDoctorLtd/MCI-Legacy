<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>NowDoctor @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/jquery-ui.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/jquery-ui.structure.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/jquery-ui.theme.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/mci_main.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/inhouse.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav id="mciNavBar" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-blue border-bottom box-shadow mb-3 ">
            <div class="container-fluid">
                <a class="navbar-brand " id="mciName" asp-area="" asp-controller="Home" asp-action="Index">NowDoctor</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="AdminPanel" asp-action="Index">Admin</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - NowDoctor Ltd. MCI Platform "Rough Cut" - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/contrib/underscore-umd.js" defer></script>
    <script src="~/js/contrib/backbone-full-1.4.1.js" defer></script>
    <script src="~/js/contrib/jquery-ui.js"></script>
    <script src="~/js/site.js" asp-append-version="true" defer></script>
    @if (ViewData["scripts"] != null)
        {
            // TODO: Work with many scripts....
        <script src = @Href("~/js/" + ViewData["scripts"]) asp-append-version="true" defer></script>
    }
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

